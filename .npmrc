# Handle peer dependency conflicts
legacy-peer-deps=true

# Increase memory for npm operations
node-options=--max-old-space-size=4096

# Disable npm update notifications
update-notifier=false

# Use exact versions when installing packages
save-exact=false

# Disable package-lock.json updates for CI
# package-lock=false

# Set registry (uncomment if using custom registry)
# registry=https://registry.npmjs.org/